#!/usr/bin/env ruby

require 'rubygems'
require 'bundler/setup'


channel = "#lanpartei"
nick = 'lanbert'

if ENV['DEBUG']
  Bundler.require(:default, :development)
  nick += '_test'
else
  Bundler.require(:default)
end
$:.unshift File.expand_path('../../plugins', __FILE__)

bot = Cinch::Bot.new do
  configure do |c|
    c.server          = "irc.freenode.org"
    c.nick            = nick
    c.channels        = [channel]
    c.verbose         = true
    c.plugins.plugins = []
  end
end

#Thread.new { listen to something }

bot.start
