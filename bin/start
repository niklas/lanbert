#!/usr/bin/env ruby

require 'rubygems'
require 'bundler/setup'


if ENV['DEBUG']
  Bundler.require(:default, :development)
  nick = 'lanny_test'
else
  Bundler.require(:default)
  nick = 'lanny'
end
$:.unshift File.expand_path('../../plugins', __FILE__)

channel = "#lanpartei"

bot = Cinch::Bot.new do
  configure do |c|
    c.server          = "irc.freenode.org"
    c.nick            = nick
    c.channels        = [channel]
    c.verbose         = true
    c.plugins.plugins = []
  end
end

#Thread.new { listen to something }

bot.start
